<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SuperMELI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/mercadolibre_yellow_light</item>
        <item name="colorPrimaryVariant">@color/mercadolibre_yellow_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/mercadolibre_yellow_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/mercadolibre_yellow_light</item>
    </style>

    <style name="Theme.SuperMELI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.SuperMELI.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">shortEdges</item>
        <item name="windowSplashScreenBackground">@color/mercadolibre_yellow_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_mercadolibre_animated</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SuperMELI.NoActionBar</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/mercadolibre_letras_branding</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Cards - Title-->
    <style name="CardTitle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/gordita_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardSubTitle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gordita_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gordita_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TitleMediumTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RegularMediumTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gordita_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleMediumBoldTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleSmallTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gordita_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleSmallBoldTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gordita_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FreeShippingText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/green_4CAF50</item>
        <item name="android:textAppearance">@style/TitleSmallBoldTextAppearance</item>
        <item name="android:textSize">@dimen/shipping_text</item>
    </style>

    <style name="FreeRecommendedText" parent="Widget.AppCompat.TextView">
        <item name="drawableStartCompat">@drawable/icon_mercadolibre_small</item>
        <item name="android:background">@drawable/rectangle_corner_4_white</item>
        <item name="android:backgroundTint">@color/black_222222</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TitleSmallTextAppearance</item>
        <item name="android:textSize">@dimen/recommended_text</item>
    </style>
    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/mercadolibre_yellow_light</item>
        <item name="colorPrimary">@color/blue_3483F9</item>
        <item name="android:textColorPrimary">@color/black_222222</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.SuperMELI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SuperMELI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>