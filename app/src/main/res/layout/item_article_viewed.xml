<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:elevation="3dp"
    android:background="@drawable/rectangle_corner_white"
    android:orientation="vertical"
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_marginTop="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="160dp"
    android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/TitleMediumTextAppearance"
            android:textSize="14sp"
            android:fontFamily="@font/gordita_regular"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:text="Samsung Galaxy 22 Plus Ultra Samsung Galaxy 22 Plus Ultra"
            android:textColor="@color/black"/>

        <TextView
            android:textAppearance="@style/TitleSmallBoldTextAppearance"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="$2.000.000"
            android:textColor="@color/black"/>

        <ImageView
            android:padding="10dp"
            android:id="@+id/imgArticle"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            tools:src="@drawable/home_electrodomesticos" />

        <TextView
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:textAppearance="@style/TitleSmallBoldTextAppearance"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center"
            android:id="@+id/lbFreeShipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Envio gratis"
            android:textColor="@color/green_4CAF50"/>

</LinearLayout>
